{
  "name": "websocket-devtools",
  "version": "1.0.3",
  "description": "Professional debugging tool with real-time monitoring, message simulation, and traffic interception for developers",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "dev": "node scripts/generate-chrome-locales.js && vite build --watch --mode development",
    "build": "npm run clean && node scripts/generate-chrome-locales.js && vite build",
    "build:dev": "node scripts/generate-chrome-locales.js && vite build --mode development",
    "preview": "vite preview",
    "clean": "rm -rf dist",
    "i18n": "node scripts/generate-chrome-locales.js"
  },
  "keywords": [
    "websocket",
    "proxy",
    "chrome-extension",
    "debugging",
    "devtools",
    "monitoring",
    "simulation",
    "interception",
    "developer-tools",
    "network-debugging",
    "real-time-monitoring",
    "message-simulation",
    "web-development"
  ],
  "author": {
    "name": "Brian Luo",
    "email": "ianloe666@gmail.com",
    "url": "https://github.com/law-chain-hot"
  },
  "license": "MIT",
  "homepage": "https://github.com/law-chain-hot/websocket-devtools#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/law-chain-hot/websocket-devtools.git"
  },
  "bugs": {
    "url": "https://github.com/law-chain-hot/websocket-devtools/issues"
  },
  "packageManager": "pnpm@10.5.2",
  "engines": {
    "node": ">=16.0.0",
    "pnpm": ">=8.0.0"
  },
  "dependencies": {
    "@codemirror/commands": "^6.8.1",
