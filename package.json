    "@codemirror/view": "^6.38.0",
    "@mantine/core": "^8.1.2",
    "@mantine/hooks": "^8.1.2",
    "@uiw/react-codemirror": "^4.23.14",
    "lucide-react": "^0.525.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-resizable-panels": "^3.0.3",
    "react-rnd": "^10.4.13",
    "uuid": "^11.1.0",
    "vite-plugin-web-extension": "^4.4.4"
  },
