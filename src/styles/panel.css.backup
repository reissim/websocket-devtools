/* React Resizable Panels Ê†∑Âºè */
/* PanelGroup ÂÆπÂô® */
[data-panel-group] {
  height: 100%;
}

/* Panel Âü∫Á°ÄÊ†∑Âºè */
[data-panel] {
  overflow: hidden;
}

/* ÂàÜÂâ≤Á∫øÊ†∑Âºè */
.panel-resize-handle {
  background-color: var(--border-color);
  width: 6px;
  cursor: col-resize;
  position: relative;
  transition: background-color 0.2s;
  flex-shrink: 0;
}

.panel-resize-handle:hover {
  background-color: var(--accent-color);
}

.panel-resize-handle:active {
  background-color: var(--accent-color);
}

/* ÂàÜÂâ≤Á∫ø‰∏≠Èó¥ÁöÑÊäìÊâãÊ†∑Âºè */
.panel-resize-handle::after {
  content: "";
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  width: 2px;
  height: 40px;
  background-color: var(--text-muted);
  opacity: 0.3;
  transition: opacity 0.2s;
  border-radius: 1px;
}

.panel-resize-handle:hover::after {
  opacity: 0.8;
  background-color: white;
}

/* ÂàÜÂâ≤Á∫øÊãñÊãΩÊó∂ÁöÑËßÜËßâÂèçÈ¶à */
.panel-resize-handle[data-resize-handle-state="drag"] {
  background-color: var(--accent-color);
}

/* Èù¢ÊùøÂÆπÂô®Ê†∑Âºè */
.panel-left-section,
.panel-right-section {
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.control-panel-container,
.websocket-list-container,
.message-details-container,
.simulate-panel-container {
  overflow: hidden;
  display: flex;
  flex-direction: column;
  border-top: 1px solid var(--border-color);
}

/* ÂàÜÂâ≤Á∫øÊñπÂêëÊ†∑Âºè */
.panel-resize-handle.horizontal {
  height: 6px;
  width: 100%;
  cursor: row-resize;
  background-color: var(--border-color);
  position: relative;
  transition: background-color 0.2s;
  flex-shrink: 0;
}

.panel-resize-handle.vertical {
  width: 6px;
  height: 100%;
  cursor: col-resize;
  background-color: var(--border-color);
  position: relative;
  transition: background-color 0.2s;
  flex-shrink: 0;
}

.panel-resize-handle.horizontal:hover,
.panel-resize-handle.vertical:hover {
  background-color: var(--accent-color);
}

/* Ê∞¥Âπ≥ÂàÜÂâ≤Á∫øÁöÑÊäìÊâã */
.panel-resize-handle.horizontal::after {
  content: "";
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  width: 40px;
  height: 2px;
  background-color: var(--text-muted);
  opacity: 0.3;
  transition: opacity 0.2s;
  border-radius: 1px;
}

.panel-resize-handle.horizontal:hover::after {
  opacity: 0.8;
  background-color: white;
}

/* ÂûÇÁõ¥ÂàÜÂâ≤Á∫øÁöÑÊäìÊâã */
.panel-resize-handle.vertical::after {
  content: "";
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  width: 2px;
  height: 40px;
  background-color: var(--text-muted);
  opacity: 0.3;
  transition: opacity 0.2s;
