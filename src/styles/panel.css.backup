/* Âü∫Á°ÄÂèòÈáè */
:root {
  --bg-primary: #1a1a1a;
  --bg-secondary: #2d2d2d;
  --bg-tertiary: #404040;
  --text-primary: #ffffff;
  --text-secondary: #b3b3b3;
  --text-muted: #808080;
  --border-color: #404040;
  --accent-color: #007acc;
  --success-color: #28a745;
  --warning-color: #ffc107;
  --danger-color: #dc3545;
  --radius: 6px;
  --shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
}

/* Âü∫Á°ÄÈáçÁΩÆ */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
  background-color: var(--bg-primary);
  color: var(--text-primary);
  font-size: 14px;
  line-height: 1.5;
}

/* WebSocketÈù¢ÊùøÂÆπÂô® */
.websocket-panel {
  height: 100vh;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

/* ÂéüÁîüË°®Ê†ºÊ†∑Âºè */
.messages-table-container {
  flex: 1;
  overflow-y: auto;
  background-color: var(--bg-primary);
  height: 100%;
}

.ws-messages-table {
  width: 100%;
  border-collapse: collapse;
  border-spacing: 0;
  font-size: 11px;
  background-color: var(--bg-primary);
  table-layout: fixed;
}

.ws-messages-table thead {
  position: sticky;
  top: 0;
  background-color: var(--bg-secondary);
  z-index: 1;
}

.ws-messages-table th.col-data {
  width: auto;
}

.ws-messages-table th.col-length {
  width: 60px;
  text-align: right;
}

.ws-messages-table th.col-time {
  width: 110px;
  text-align: right;
  user-select: none;
}

.ws-messages-table th.col-time:hover {
  color: var(--accent-color);
}

.ws-messages-table td {
  padding: 2px 8px;
  border-bottom: 1px solid rgba(255, 255, 255, 0.2);
  border-right: 1px solid rgba(255, 255, 255, 0.2);
  vertical-align: middle;
  height: 24px;
  font-size: 12px;
}

.ws-messages-table td:last-child {
  border-right: none;
}

.ws-messages-table th {
  padding: 4px 8px;
  text-align: left;
  font-weight: 500;
  color: var(--text-secondary);
  border-bottom: 1px solid var(--border-color);
  border-right: 1px solid rgba(255, 255, 255, 0.2);
  background-color: var(--bg-secondary);
  font-size: 11px;
  height: 24px;
}

.ws-messages-table th:last-child {
  border-right: none;
}

.ws-messages-table td.col-length {
  text-align: right;
  color: var(--text-secondary);
}

.ws-messages-table td.col-time {
  text-align: right;
  color: var(--text-secondary);
}

.message-row {
  cursor: pointer;
  transition: background-color 0.1s;
}

.message-row:hover {
  background-color: rgba(255, 255, 255, 0.05);
}

.message-row.selected {
  background-color: var(--accent-color) !important;
  color: white;
}

.message-row.selected .data-cell,
.message-row.selected .col-length,
.message-row.selected .col-time {
  color: white;
}

.message-row.outgoing {
  border-right: 3px solid var(--success-color);
}

.message-row.incoming {
  border-right: 3px solid var(--danger-color);
}

.message-row.system {
  border-right: 3px solid var(--accent-color);
}

.message-row.simulated {
  background-color: rgba(255, 193, 7, 0.2);
}

.message-row.blocked {
  background-color: rgba(220, 53, 69, 0.2);
}

.data-cell {
  display: flex;
  align-items: center;
  gap: 4px;
  overflow: hidden;
  color: var(--text-primary);
  height: 100%;
}

.data-cell.system {
  color: var(--accent-color);
}

.direction-arrow {
  font-size: 12px;
  font-weight: bold;
  width: 12px;
  text-align: center;
  flex-shrink: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
}

.direction-arrow.outgoing {
  color: var(--success-color);
}

.direction-arrow.incoming {
  color: var(--danger-color);
}

.system-icon {
  color: var(--accent-color);
  font-size: 12px;
  flex-shrink: 0;
  display: flex;
  align-items: center;
}

.system-text {
  color: var(--text-secondary);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.message-tags {
  display: flex;
  align-items: center;
  gap: 2px;
  flex-shrink: 0;
  margin-right: 4px;
}

.message-tag {
  display: inline-flex;
  align-items: center;
  gap: 2px;
  padding: 1px 4px;
  border-radius: 3px;
  font-size: 9px;
  font-weight: 500;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.message-tag.simulated {
  background-color: #ffc107;
  color: #000;
}

.message-tag.blocked {
  background-color: var(--danger-color);
  color: white;
}

.message-text {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  flex: 1;
  color: var(--text-primary);
}

/* ÁÆÄÊ¥ÅËØ¶ÊÉÖÈù¢Êùø */
.message-detail-simple {
  background-color: var(--bg-secondary);
  border-top: 1px solid var(--border-color);
  max-height: 300px;
  display: flex;
  flex-direction: column;
}

.close-btn {
  background: none;
  border: none;
  color: var(--text-secondary);
  cursor: pointer;
  font-size: 14px;
  padding: 2px;
  transition: color 0.2s;
  margin-left: auto;
}

.close-btn:hover {
  color: var(--text-primary);
}

.detail-content {
  flex: 1;
  overflow: hidden;
}

.detail-body {
  padding: 8px 12px;
  height: 100%;
  display: flex;
  flex-direction: column;
  gap: 6px;
}

.detail-actions {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 6px;
  padding-bottom: 6px;
  border-bottom: 1px solid var(--border-color);
}

.detail-actions .copy-btn {
  padding: 2px 6px;
  font-size: 10px;
  background-color: var(--bg-tertiary);
  border: 1px solid var(--border-color);
  color: var(--text-secondary);
  cursor: pointer;
  border-radius: 3px;
  transition: all 0.2s;
}

.detail-actions .copy-btn:hover {
  background-color: var(--bg-secondary);
  color: var(--text-primary);
}

.detail-actions .copy-btn.copied {
  background-color: var(--success-color);
  color: white;
}

.detail-text {
  flex: 1;
  background-color: var(--bg-primary);
  border: 1px solid var(--border-color);
  padding: 8px;
  color: var(--text-primary);
  font-size: 11px;
  line-height: 1.3;
  overflow: auto;
  margin: 0;
}

.intercept-actions {
  display: flex;
  gap: 6px;
  padding-top: 6px;
  border-top: 1px solid var(--border-color);
}

.intercept-actions .action-btn {
  padding: 2px 6px;
  font-size: 10px;
  border: 1px solid var(--border-color);
  background-color: var(--bg-tertiary);
  color: var(--text-secondary);
  cursor: pointer;
  border-radius: 3px;
  transition: all 0.2s;
}

.intercept-actions .action-btn:hover {
  background-color: var(--bg-secondary);
  color: var(--text-primary);
}

/* Èù¢ÊùøÂ§¥ÈÉ® */
.panel-header {
  background-color: var(--bg-secondary);
  border-bottom: 1px solid var(--border-color);
  padding: 12px 16px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-shrink: 0;
}

.panel-header h1 {
  font-size: 18px;
  font-weight: 600;
  color: var(--text-primary);
}

.panel-status {
  display: flex;
  align-items: center;
  gap: 8px;
}

.status {
  font-size: 12px;
  padding: 4px 8px;
  border-radius: var(--radius);
  font-weight: 500;
}

.status.active {
  background-color: var(--success-color);
  color: white;
}

.status.inactive {
  background-color: var(--danger-color);
  color: white;
}

.status.paused {
  background-color: var(--warning-color);
  color: black;
}

/* ÊéßÂà∂Èù¢Êùø */
.control-panel {
  height: 100%;
  background-color: transparent;
  border: none;
  box-shadow: none;
  margin: 0;
  padding: 16px;
}

.control-grid {
  display: grid;
  grid-template-columns: 1fr 1.5fr;
  gap: 16px;
  align-items: start;
}

.control-column {
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.control-section {
  margin-bottom: 8px;
}

.control-section.compact {
  margin-bottom: 4px;
}

.control-section:last-child {
  margin-bottom: 0;
}

.control-section h3 {
  font-size: 12px;
  font-weight: 600;
  margin-bottom: 8px;
  color: var(--text-primary);
  display: flex;
  align-items: center;
  gap: 6px;
}

.status-section {
  display: flex;
  align-items: center;
  padding: 6px 8px;
  border-radius: var(--radius);
  border: 1px solid var(--border-color);
  background-color: var(--bg-tertiary);
  font-size: 11px;
  margin-bottom: 4px;
}

.status-section .status-active {
  color: var(--success-color);
  font-weight: 500;
}

.control-buttons {
  display: flex;
  flex-direction: column;
  gap: 8px;
}

/* ÁõëÊéßÊåâÈíÆÊ†∑Âºè */
.control-buttons .btn:not(.block-btn) {
  min-width: 100px;
  font-weight: 600;
}

.control-description {
  font-size: 12px;
  color: var(--text-muted);
  line-height: 1.4;
}

/* ÊåâÈíÆÊ†∑Âºè */
.btn {
  display: inline-flex;
  align-items: center;
  gap: 6px;
  padding: 8px 12px;
  border: 1px solid var(--border-color);
  border-radius: var(--radius);
  background-color: var(--bg-tertiary);
  color: var(--text-secondary);
  cursor: pointer;
  transition: all 0.2s;
  font-size: 12px;
  text-decoration: none;
  font-family: inherit;
}

.btn:hover {
  background-color: var(--bg-secondary);
  border-color: var(--accent-color);
}

.btn.btn-primary {
  background-color: var(--accent-color);
  color: white;
  border-color: var(--accent-color);
}

.btn.btn-primary:hover {
  background-color: #005a9e;
  border-color: #005a9e;
}

.btn.btn-success {
  background-color: var(--success-color);
  color: white;
  border-color: var(--success-color);
}

.btn.btn-success:hover {
  background-color: #1e7e34;
  border-color: #1e7e34;
}

.btn.btn-warning {
  background-color: var(--warning-color);
  color: black;
  border-color: var(--warning-color);
}

.btn.btn-warning:hover {
  background-color: #e0a800;
  border-color: #e0a800;
}

.btn.btn-danger {
  background-color: var(--danger-color);
  color: white;
  border-color: var(--danger-color);
}

.btn.btn-danger:hover {
  background-color: #bd2130;
  border-color: #bd2130;
}

.btn.btn-secondary {
  background-color: var(--bg-tertiary);
  color: var(--text-secondary);
  border-color: var(--border-color);
}

.btn.btn-secondary:hover {
  background-color: var(--bg-secondary);
  border-color: var(--accent-color);
}

/* ÂºÄÂÖ≥Ê†∑Âºè */
.control-switches {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.switch-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 8px 0;
}

.switch-label {
  font-size: 12px;
  font-weight: 500;
  color: var(--text-primary);
  flex: 1;
}

.switch-btn {
  display: flex;
  align-items: center;
  gap: 6px;
  padding: 4px 8px;
  border: 1px solid var(--border-color);
  border-radius: 12px;
  background-color: var(--bg-tertiary);
  color: var(--text-secondary);
  cursor: pointer;
  transition: all 0.3s ease;
  font-size: 10px;
  min-width: 60px;
  justify-content: center;
}

.switch-btn:hover {
  background-color: var(--bg-secondary);
  border-color: var(--accent-color);
}

.switch-btn.on {
  background-color: var(--success-color);
  border-color: var(--success-color);
  color: white;
}

.switch-btn.on:hover {
  background-color: #1e7e34;
  border-color: #1e7e34;
}

.switch-btn.off {
  background-color: var(--bg-tertiary);
  border-color: var(--border-color);
  color: var(--text-secondary);
}

.switch-btn.off:hover {
  background-color: var(--bg-secondary);
  border-color: var(--accent-color);
}

.switch-indicator {
  font-size: 12px;
  font-weight: bold;
}

.switch-text {
  font-size: 9px;
  font-weight: 600;
  letter-spacing: 0.5px;
}

/* ‰∏ªË¶ÅÂÜÖÂÆπÂå∫Âüü */
.panel-content {
  flex: 1;
  display: flex;
  overflow: hidden;
  height: 100%;
}

.panel-left {
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.panel-right {
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

/* WebSocketËøûÊé•ÂàóË°® */
.websocket-list {
  height: 100%;
  background-color: transparent;
  border: none;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.websocket-list-header {
  background-color: var(--bg-secondary);
  border-bottom: 1px solid var(--border-color);
  padding: 16px;
  flex-shrink: 0;
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.header-info h3 {
  font-size: 14px;
  font-weight: 600;
  margin-bottom: 4px;
  color: var(--text-primary);
}

.connection-stats {
  font-size: 12px;
  color: var(--text-muted);
}

.header-actions {
  display: flex;
  gap: 8px;
}

.clear-connections-btn {
  font-size: 11px;
  padding: 6px 10px;
  background-color: var(--danger-color);
  color: white;
  border: 1px solid var(--danger-color);
  border-radius: var(--radius);
  cursor: pointer;
  transition: all 0.2s;
}

.clear-connections-btn:hover {
  background-color: #c82333;
  border-color: #c82333;
}

/* ËøûÊé•ÂÆπÂô® */
.connections-container {
  flex: 1;
  overflow-y: auto;
  padding: 24px 16px;
}

.connection-item {
  background-color: var(--bg-secondary);
  border: 1px solid var(--border-color);
  border-radius: var(--radius);
  padding: 12px;
  margin-bottom: 8px;
  cursor: pointer;
  transition: all 0.2s;
}

.connection-item:hover {
  background-color: var(--bg-tertiary);
  border-color: var(--accent-color);
}

.connection-item.selected {
  background-color: var(--accent-color);
  border-color: var(--accent-color);
  color: white;
}

.connection-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8px;
}

.connection-status {
  display: flex;
  align-items: center;
  gap: 4px;
}

.status-indicator {
  font-size: 14px;
  line-height: 1;
}

.status-text {
  font-size: 11px;
  font-weight: 600;
  text-transform: uppercase;
}

.connection-id {
  font-size: 10px;
  background-color: var(--bg-tertiary);
  padding: 2px 6px;
  border-radius: 10px;
  color: var(--text-muted);
  font-family: "Courier New", monospace;
}

.connection-item.selected .connection-id {
  background-color: rgba(255, 255, 255, 0.2);
  color: white;
}

.connection-url {
  font-size: 12px;
  color: var(--text-secondary);
  margin-bottom: 8px;
  word-break: break-all;
  line-height: 1.3;
}

.connection-item.selected .connection-url {
  color: rgba(255, 255, 255, 0.9);
}

.connection-info {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  font-size: 11px;
}

.info-item {
  display: flex;
  gap: 4px;
}

.info-label {
  color: var(--text-muted);
}

.info-value {
  color: var(--text-secondary);
  font-weight: 500;
}

.connection-item.selected .info-label,
.connection-item.selected .info-value {
  color: rgba(255, 255, 255, 0.8);
}

/* Á©∫Áä∂ÊÄÅ */
.websocket-list-empty {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}

.empty-state {
  text-align: center;
  padding: 40px 20px;
}

.empty-icon {
  font-size: 48px;
  margin-bottom: 16px;
  opacity: 0.5;
}

.empty-text {
  font-size: 16px;
  font-weight: 500;
  color: var(--text-secondary);
  margin-bottom: 8px;
}

.empty-description {
  font-size: 14px;
  color: var(--text-muted);
  line-height: 1.4;
  max-width: 300px;
}

/* Ê∂àÊÅØËØ¶ÊÉÖ */
.message-details {
  height: 100%;
  background-color: transparent;
  border: none;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.details-header {
  background-color: var(--bg-primary);
  border-bottom: 1px solid var(--border-color);
  padding: 8px 12px;
  flex-shrink: 0;
}

.details-header h3 {
  font-size: 13px;
  font-weight: 600;
  margin-bottom: 6px;
  color: var(--text-primary);
}

.connection-details {
  font-size: 12px;
  color: var(--text-muted);
}

.controls {
  display: flex;
  flex-direction: column;
  gap: 4px;
}

.control-row {
  display: flex;
  align-items: center;
  gap: 12px;
  flex-wrap: wrap;
}

.filter-controls {
  display: flex;
  align-items: center;
  gap: 4px;
  margin-bottom: 0;
  position: relative;
}

.filter-controls.primary-filter {
  margin-right: 8px;
}

.filter-controls.search-filter {
  flex: 1;
  max-width: 400px;
  margin-right: 12px;
}

.secondary-controls {
  display: flex;
  align-items: center;
  gap: 8px;
  margin-left: auto;
  flex-wrap: wrap;
}

.filter-controls label {
  font-size: 10px;
  color: var(--text-secondary);
  white-space: nowrap;
  min-width: fit-content;
}

.filter-controls select,
.filter-controls input {
  padding: 3px 6px;
  border: 1px solid var(--border-color);
  border-radius: 2px;
  background-color: var(--bg-primary);
  color: var(--text-primary);
  font-size: 11px;
  outline: none;
  height: 20px;
  box-sizing: border-box;
}

.filter-controls.primary-filter select {
  min-width: 80px;
  font-weight: 500;
}



.filter-controls.direction-filter select,
.filter-controls.view-filter select {
  min-width: 60px;
}

.filter-controls select:focus,
.filter-controls input:focus {
  border-color: var(--accent-color);
}

.filter-controls.search-filter input:focus {
  border-color: var(--accent-color);
}

.invert-checkbox {
  display: flex;
  align-items: center;
  gap: 6px;
  cursor: pointer;
  font-size: 11px;
  color: var(--text-secondary);
  user-select: none;
  height: 20px;
}

.invert-checkbox input[type="checkbox"] {
  position: absolute;
  opacity: 0;
  cursor: pointer;
  height: 0;
  width: 0;
}

.invert-checkbox .checkmark {
  position: relative;
  height: 12px;
  width: 12px;
  border: 1px solid var(--border-color);
  border-radius: 2px;
  background-color: var(--bg-primary);
  transition: all 0.2s;
}

.invert-checkbox:hover .checkmark {
  border-color: var(--accent-color);
}

.invert-checkbox input:checked ~ .checkmark {
  background-color: var(--accent-color);
  border-color: var(--accent-color);
}

.invert-checkbox .checkmark:after {
  content: "";
  position: absolute;
  display: none;
  left: 3px;
  top: 1px;
  width: 4px;
  height: 7px;
  border: solid white;
  border-width: 0 2px 2px 0;
  transform: rotate(45deg);
}

.invert-checkbox input:checked ~ .checkmark:after {
  display: block;
}

.invert-checkbox .checkbox-label {
  font-weight: 400;
  color: var(--text-secondary);
}

.filter-input-container {
  position: relative;
  display: flex;
  align-items: center;
  width: 100%;
}

.filter-icon {
  position: absolute;
  left: 6px;
  top: 50%;
  transform: translateY(-50%);
  color: var(--text-muted);
  font-size: 12px;
  z-index: 1;
  pointer-events: none;
}

.filter-controls.search-filter input {
  width: 100%;
  padding: 3px 24px 3px 24px !important;
  background-color: var(--bg-secondary);
  border: 1px solid var(--border-color);
  border-radius: 2px;
  color: var(--text-primary);
  font-size: 11px;
  outline: none;
  height: 20px;
  box-sizing: border-box;
}

.filter-controls.search-filter input::placeholder {
  color: var(--text-muted);
}

.clear-filter-btn {
  position: absolute;
  right: 6px;
  top: 50%;
  transform: translateY(-50%);
  padding: 2px 4px;
  border: none;
  background: transparent;
  color: var(--text-muted);
  cursor: pointer;
  font-size: 10px;
  transition: all 0.2s;
